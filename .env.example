# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# MLflow Configuration
MLFLOW_TRACKING_URI=file:./mlruns
MLFLOW_UI_PORT=5001

# Model Configuration
MODEL_TYPE=xgboost
MODEL_PATH=models/
PREPROCESSOR_PATH=models/preprocessor.pkl

# Database Configuration (if using external DB for MLflow)
# DATABASE_URL=postgresql://user:password@localhost:5432/mlflow_db

# AWS Configuration (for ECR deployment)
# AWS_REGION=us-east-1
# AWS_ACCOUNT_ID=123456789012
# ECR_REPOSITORY_NAME=hotel-cancellation-prediction

# Docker Configuration
COMPOSE_PROJECT_NAME=hotel-cancellation-prediction

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security (for production)
# API_KEY=your-secret-api-key
# JWT_SECRET=your-jwt-secret-key

# Model Training Configuration
TRAINING_DATA_SIZE=10000
RANDOM_SEED=42

# Performance Configuration
MAX_WORKERS=4
BATCH_SIZE=100